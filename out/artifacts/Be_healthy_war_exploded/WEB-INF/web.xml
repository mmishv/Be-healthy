<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.fpmibsu.be_healthy.servlets.filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>main</servlet-name>
        <jsp-file>/jsp/main/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>main0</servlet-name>
        <jsp-file>/jsp/main/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>main0</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>auth</servlet-name>
        <jsp-file>/jsp/profile/auth.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/authentication</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>forum</servlet-name>
        <jsp-file>/jsp/forum/forum.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>forum</servlet-name>
        <url-pattern>/forum</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>new_recipe</servlet-name>
        <jsp-file>/jsp/recipes/new_recipe.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>new_recipe</servlet-name>
        <url-pattern>/new_recipe</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RecipesMainServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.recipes.RecipesMainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RecipesMainServlet</servlet-name>
        <url-pattern>/recipes/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create_recipe</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.recipes.CreateRecipeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>create_recipe</servlet-name>
        <url-pattern>/create_recipe</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MealServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.diary.MealServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MealServlet</servlet-name>
        <url-pattern>/diary/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>by.fpmibsu.be_healthy.servlets.filters.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/diary/*</url-pattern>
        <url-pattern>/create_recipe</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RecipeCategoryServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.recipes.RecipeCategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RecipeCategoryServlet</servlet-name>
        <url-pattern>/recipe_category/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteMealServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.diary.DeleteMealServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteMealServlet</servlet-name>
        <url-pattern>/delete-meal/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MixerServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.products.MixerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MixerServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

</web-app>
