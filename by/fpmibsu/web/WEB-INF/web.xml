<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.fpmibsu.be_healthy.servlets.filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.main.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern></url-pattern>
        <url-pattern>/main/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>auth</servlet-name>
        <jsp-file>/jsp/profile/auth.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/authentication</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>forum</servlet-name>
        <jsp-file>/jsp/forum/forum.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>forum</servlet-name>
        <url-pattern>/forum</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RecipesMainServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.recipes.RecipesMainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RecipesMainServlet</servlet-name>
        <url-pattern>/recipes/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create_recipe</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.recipes.CreateRecipeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>create_recipe</servlet-name>
        <url-pattern>/create_recipe</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>create_article</servlet-name>
        <url-pattern>/create_article</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create_article</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.CreateArticleServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>MealServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.diary.MealServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MealServlet</servlet-name>
        <url-pattern>/diary/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>by.fpmibsu.be_healthy.servlets.filters.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/diary/*</url-pattern>
        <url-pattern>/create_recipe</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RecipeCategoryServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.recipes.RecipeCategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RecipeCategoryServlet</servlet-name>
        <url-pattern>/recipe_category/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteMealServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.diary.DeleteMealServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteMealServlet</servlet-name>
        <url-pattern>/delete-meal/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditMealServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.diary.EditMealServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditMealServlet</servlet-name>
        <url-pattern>/edit-meal/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.products.ProductsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mixer</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.products.MixerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mixer</servlet-name>
        <url-pattern>/mixer/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.AboutMeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.EditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/edit_profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditRecipeServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.recipes.EditRecipeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditRecipeServlet</servlet-name>
        <url-pattern>/edit_recipe/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteRecipeServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.recipes.DeleteRecipeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteRecipeServlet</servlet-name>
        <url-pattern>/delete_recipe/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditArticleServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.EditArticleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditArticleServlet</servlet-name>
        <url-pattern>/edit_article/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteArticleServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.DeleteArticleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteArticleServlet</servlet-name>
        <url-pattern>/delete_article/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>article</servlet-name>
        <jsp-file>/jsp/main/article.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyRecipesServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.MyRecipesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyRecipesServlet</servlet-name>
        <url-pattern>/my_recipes/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyArticlesServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.profile.MyArticlesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyArticlesServlet</servlet-name>
        <url-pattern>/my_articles/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticleServlet</servlet-name>
        <servlet-class>by.fpmibsu.be_healthy.servlets.main.ArticleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ArticleServlet</servlet-name>
        <url-pattern>/article/*</url-pattern>
    </servlet-mapping>


</web-app>
